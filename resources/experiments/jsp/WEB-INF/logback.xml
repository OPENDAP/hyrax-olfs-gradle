<configuration>




    <!-- property name="FORMAT" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" / -->
    <property name="FORMAT" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS Z} [thread:%t] [%r][%X{ID}] [%X{SOURCE}]   %-5p - %c - %m%n" />




    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
          <pattern>${FORMAT}</pattern>
        </encoder>

    </appender>

    <appender name="HAI_DEBUG_LOGGER" class="ch.qos.logback.core.read.CyclicBufferAppender">
        <MaxSize>512</MaxSize>
    </appender>


    <appender name="ErrorLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logdir}/error.log</File>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>tests.%i.log.zip</FileNamePattern>
            <MinIndex>1</MinIndex>
            <MaxIndex>3</MaxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>5MB</MaxFileSize>
        </triggeringPolicy>


        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
          <pattern>${FORMAT}</pattern>
        </encoder>

    </appender>

    <appender name="HyraxAccessLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logdir}/HyraxAccess.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logFile.%d{yyyy-MM-dd}.log</FileNamePattern>
            <!-- keep 30 days worth of history -->
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%X{host} %X{ident} %X{userid} [%d{dd/MMM/yyyy:HH:mm:ss}] [%8X{ID}] [%X{SOURCE}]  %X{request} %m%n</pattern>
        </encoder>

    </appender>


    <appender name="BESCommands" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logdir}/BESCommands.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logFile.%d{yyyy-MM-dd}.log</FileNamePattern>
            <!-- keep 30 days worth of history -->
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>


        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{dd/MMM/yyyy:HH:mm:ss}] [request %X{ID}]      %m</pattern>
        </encoder>

    </appender>




    <logger name="opendap_" level="error">
        <appender-ref ref="ErrorLog"/>
    </logger>

    <logger name="org.jdom" level="all">
        <appender-ref ref="stdout"/>
    </logger>



    <logger name="opendap_.coreServlet" level="error">
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="opendap_.hai" level="all">
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="opendap_.dap.Request" level="all"/>

    <logger name="opendap_.hai" level="all"/>


    <logger name="opendap_.coreServlet.ReqInfo" level="info"/>
    <logger name="opendap_.coreServlet.OPeNDAPException" level="all"/>
    <logger name="opendap_.coreServlet.DispatchServlet" level="all"/>
    <logger name="opendap_.coreServlet.Scrub" level="all"/>
    <logger name="opendap_.coreServlet.RequestCache" level="error"/>
    <logger name="opendap_.coreServlet.BotBlocker" level="all"/>




    <logger name="opendap_.bes" level="error">
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="opendap_.bes.dap2Responders.BesApi" level="all"/>
    <logger name="opendap_.bes.dap2Responders.Ascii" level="all"/>

    <logger name="opendap_.bes.BESManager" level="all"/>
    <logger name="opendap_.bes.BesXmlAPI" level="all"/>
    <logger name="opendap_.bes.BES" level="all"/>
    <logger name="opendap_.bes.BESConfig" level="all"/>
    <logger name="opendap_.bes.DapDispatchHandler" level="all"/>
    <logger name="opendap_.bes.DirectoryDispatchHandler" level="all"/>
    <logger name="opendap_.bes.BESThreddsDispatchHandler" level="all"/>


    <logger name="opendap_.gateway" level="all">
                 <appender-ref ref="stdout"/>
    </logger>

    <logger name="opendap_.webstart" level="all">
                 <appender-ref ref="stdout"/>
    </logger>
    <logger name="opendap_.ncml" level="all">
                 <appender-ref ref="stdout"/>
    </logger>


    <logger name="opendap_.threddsHandler" level="all">
             <appender-ref ref="stdout"/>
    </logger>

    <logger name="org.apache.jasper" level="all">
             <appender-ref ref="stdout"/>
    </logger>





